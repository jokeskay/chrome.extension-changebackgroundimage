{
  // Required
  "manifest_version": 2,
  "name": "Basic background image tool",
  "version": "1.0",

  // Recommended
  "default_locale": "en",
  "description": "A plain text description",

  // Pick one (or none)
  "browser_action": {
  "default_icon": "arrows.png",
  "default_popup": "popup.html"

  // Optional
  "author": "easy.chromeext."
  "background": {
    // Recommended
    "persistent": false
  },

  "optional_permissions": ["tabs"],

  "permissions": 
  ["activeTab"],
}
