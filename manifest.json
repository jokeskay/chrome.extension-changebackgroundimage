{
  "manifest_version": 2,
  "name": "Basic background image tool",
  "version": "1.0",

  "description": "A plain text description",

  "browser_action": {
  "default_icon": "arrows.png",
  "default_popup": "popup.html",

  "author": "easy.chromeext.",
  "background": {
   
    "persistent": false
  },

  "permissions":
    ["tabs", "activeTabs"],
  
    "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myscript.js"]
    }
  ]
}
